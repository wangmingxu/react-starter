{
    "parser": "babel-eslint",
    "extends": [
        "react-app",
        "plugin:prettier/recommended",
        "prettier/react",
        "prettier/standard"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "config/webpack.config.base.js"
            }
        }
    },
    "rules": {
        "no-restricted-properties": "off",
        "spaced-comment":"error"
    },
    "globals": {
        "_hmt": true,
        "fundebug": true,
        "__ISOMORPHIC__": true
    }
}
